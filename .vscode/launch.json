{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cars API",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "env": {
                "FLASK_ENV": "development"
            },
            "args": [
                "--host=0.0.0.0",
                "--port=5000"
            ],
            "jinja": true
        },
        {
            "name": "Test Cars API",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/tests"
            ],
            "justMyCode": true
        }
    ]
}
